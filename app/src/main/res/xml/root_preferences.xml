<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/daily_reminder"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="reminder"
            app:title="@string/reminder_title"
            app:summary="@string/reminder_summary"
            app:icon="@drawable/ic_baseline_access_alarm_24" />

    </PreferenceCategory>


    <PreferenceCategory app:title="@string/language"
        app:iconSpaceReserved="false">

        <Preference
            app:key="change_language"
            app:title="@string/change_language"
            app:icon="@drawable/ic_baseline_language_24"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>