<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yusril.consumerapp">

    <uses-permission android:name="com.yusril.githubuser2.READ_DATABASE"/>
    <uses-permission android:name="com.yusril.githubuser2.WRITE_DATABASE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/consumerapp"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUser2">
        <activity android:name=".ui.FavoriteActivity" />
        <activity
            android:name=".ui.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.DetailActivity" />
        <activity android:name=".ui.MainActivity" />
    </application>

    <queries>
        <package android:name="com.yusril.githubuser2" />
    </queries>

</manifest>